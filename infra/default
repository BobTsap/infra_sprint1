server {
        server_name taskibob.hopto.org;

        location /api/ {
                proxy_pass http://127.0.0.1:8000;
        }

        location / {
                 root   /var/www/taski;
                 index  index.html index.htm;
                 try_files $uri /index.html;
        }
        location /admin/ {
                proxy_pass http://127.0.0.1:8000;
                            }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/taskibob.hopto.org/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/taskibob.hopto.org/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}


server {
        server_name kittybob.hopto.org;

        location /media/ {
                client_max_body_size 20M;
                alias /var/www/kittygram/media/;
        }
        location / {
                root /var/www/infra_sprint1;
                index  index.html index.htm;
                try_files $uri /index.html;
        }



        location /api/ {
                client_max_body_size 20M;
                proxy_pass http://127.0.0.1:8080;
    }
    location /admin/ {
            client_max_body_size 20M;
            proxy_pass http://127.0.0.1:8080;
    }


    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/kittybob.hopto.org/fullchain.pem; # managed by Certb>
    ssl_certificate_key /etc/letsencrypt/live/kittybob.hopto.org/privkey.pem; # managed by Cer>
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}



server {
    if ($host = kittybob.hopto.org) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


        listen 80;
        server_name kittybob.hopto.org;
    return 404; # managed by Certbot


}
